<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp8.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Launch the app in landscape mode on an Android tablet, switch to split view with another app and try to change splitter width - FlyoutPage ignores all the resizes."
                Style="{StaticResource Headline}"
                MaximumWidthRequest="500"
                SemanticProperties.HeadingLevel="Level1" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>